{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "fieldValidationSchema",
    "type": "object",
    "patternProperties": {
        "^\\d{2}\\.\\d{2}$": {
            "$ref": "#/definitions/field"
        }
    },
    "properties": {
        "normal": {
            "$ref": "#/definitions/main"
        },
        "etcs": {
            "$ref": "#/definitions/main"
        },
        "99": {
            "$ref": "#/definitions/field"
        }
    },
    "definitions": {
        "field": {
            "properties": {
                "fieldsNeeded": {
                    "type": "array",
                    "items": {
                        "pattern": "^\\d+$",
                        "type": "string"
                    }
                },
                "instructionsDisallowed": {
                    "type": "array",
                    "items": {
                        "pattern": "^\\d+(?:$|\\.\\d+$)",
                        "type":"string"
                    }
                }
            }
        },
        "main": {
            "properties": {
                "fieldsNeeded": {
                    "type": "array",
                    "items": {
                        "pattern": "^[A-Z]$",
                        "type": "string"
                    }
                }
            }
        }
    }
}