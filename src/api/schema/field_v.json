{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "fieldValidationSchema",
    "type": "object",
    "uniqueItems": true,
    "patternProperties": {
        "^\\d{2}\\.\\d{2}$": {
            "$ref": "#/definitions/field"
        }
    },
    "additionalProperties": false,
    "properties": {
        "normal": {
            "$ref": "#/definitions/main"
        },
        "etcs": {
            "$ref": "#/definitions/main"
        },
        "99": {
            "$ref": "#/definitions/field"
        }
    },
    "definitions": {
        "field": {
            "type": "object",
            "title": "Nr instrukcji",
            "required": [
                "fieldsNeeded"
            ],
            "properties": {
                "fieldsNeeded": {
                    "title": "Pola wymagane w danej instrukcji",
                    "type": "array",
                    "items": {
                        "pattern": "^\\d+$",
                        "type": "string"
                    }
                },
                "fieldsDashedWhenEmpty": {
                    "type": "array",
                    "title": "Pola, które jak są puste mają wyświetlać się z znakiem `-`",
                    "items": {
                        "pattern": "^\\d+$",
                        "type": "string"
                    }
                },
                "instructionsDisallowed": {
                    "type": "array",
                    "title": "Instrukcje które nie mogą być na jednym rozkazie w tym samym momencie co dana instrukcja",
                    "items": {
                        "pattern": "^\\d+(?:$|\\.\\d+$)",
                        "type": "string"
                    }
                }
            }
        },
        "main": {
            "type": "object",
            "title": "Identyfikator pól nagłówka",
            "required": [
                "fieldsNeeded"
            ],
            "properties": {
                "fieldsNeeded": {
                    "title": "Pola wymagane w danej instrukcji",
                    "type": "array",
                    "items": {
                        "pattern": "^[A-Z]$",
                        "type": "string"
                    }
                }
            }
        }
    }
}